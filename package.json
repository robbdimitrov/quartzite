{
  "name": "quartzite",
  "version": "2.0.1",
  "description": "Lightweight relative date/time formatter without external dependencies.",
  "author": "Robert Dimitrov <robert_dimitrov@me.com>",
  "license": "MIT",
  "main": "dist/quartzite.js",
  "types": "types/quartzite.d.ts",
  "unpkg": "dist/quartzite.js",
  "files": [
    "dist/*.js",
    "types/*.d.ts"
  ],
  "keywords": [
    "micro",
    "relative",
    "date",
    "time",
    "format",
    "human-readable",
    "timestamp"
