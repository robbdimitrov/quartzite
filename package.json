    "lint": "eslint src test",
    "test": "mocha test/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robbdimitrov/quartzite.git"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "babel-loader": "^8.1.0",
    "eslint": "^7.1.0",
    "eslint-loader": "^4.0.2",
    "mocha": "^7.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
